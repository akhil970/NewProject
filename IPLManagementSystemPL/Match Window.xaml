<Window x:Class="IPLManagementSystemPL.Match_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPLManagementSystemPL"
        mc:Ignorable="d"
        Title="Match_Window" Height="700" Width="800" MaxHeight="700" MinHeight="700" MaxWidth="800" MinWidth="800" Background="#FF7C95CC" WindowStartupLocation="CenterScreen">
    <Grid Margin="1,0,-1.154,-1.923">
